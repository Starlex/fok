#---Settings for Apache
Options Indexes FollowSymLinks
DirectoryIndex index.php

RewriteEngine On
RewriteBase /
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+)/(.+)/$ /?page=/$1/&var1=$2/ [L,QSA]
RewriteRule ^(.+)/$ /?page=/$1/ [L,QSA]
ErrorDocument 404 /404.php

#---Settings for PHP